{
    "gui": [
        {
            "label": "Sample GUI",
            "command": "echo file: %file% & echo folder: %folder% & echo num: %num% & echo checkbox: %check%",
            "button": "Echo!",
            "components": [
                {
                    "type": "static_text",
                    "label": "This is a sample GUI. Edit 'gui_definition.json' for your scripts."
                },
                {
                    "type": "file",
                    "label": "Some file path",
                    "extension": "any files | *"
                },
                {
                    "type": "folder",
                    "label": "Some folder path"
                },
                {
                    "type": "check",
                    "label": "checkbox",
                    "value": "true",
                    "default": "true"
                }
            ]
        },
        {
            "label": "Sample GUI2",
            "command": "echo text_box: %t% & echo options:%%",
            "button": "Echo!",
            "components": [
                {
                    "type": "static_text",
                    "label": "This is a sample GUI. Edit 'gui_definition.json' for your scripts."
                },
                {
                    "type": "text_box",
                    "label": "Some text",
                    "default": "default value"
                },
                {
                    "type": "check_array",
                    "label": "options",
                    "items": ["option1 ", "option2 ", " flag"],
                    "values": [" --option1 ", " --option2 ", " -flag"],
                    "default": ["true", "false", "false"]
                }
            ]
        }
    ]
}